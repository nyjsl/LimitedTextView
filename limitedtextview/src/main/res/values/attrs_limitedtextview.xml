<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LimitedTextView">

        <attr name="overflow_str" format="reference|integer|string"/><!-- hint for text overflows-->
        <attr name="overflow_len" format="integer"/>  <!-- maxlength-->
        <attr name="ellipsis_hint_str" format="reference|integer|string"/> <!-- hint for text shrinks-->
        <attr name="toexpandhint_str" format="reference|integer|string"/>  <!-- hint for text  to expand-->
        <attr name="toshrinkhint_str" format="reference|integer|string"/>  <!-- hint for text  to shrink-->
        <attr name="maxlinesonshrink" format="integer"/>  <!-- max line to shink-->

        <attr name="toExpandHintColor" format="reference|color" />
        <attr name="toShrinkHintColor" format="reference|color" />
        <attr name="toExpandHintColorBgPressed" format="reference|color" />
        <attr name="toShrinkHintColorBgPressed" format="reference|color" />
        <attr name="overflow_drawable" format="reference" />
        <attr name="overflow_drawable_textSize" format="dimension" />
        <attr name="overflow_drawable_textColor" format="color" />
        <attr name="overflow_drawable_extrapadding" format="dimension" />

        <attr name="limited_mode" format="enum">
            <enum name="no" value="0"/>
            <enum name="yes" value="1"/>
        </attr>

        <attr name="show_overflow_str" format="boolean"/>

        <attr name="shrink_expand_mode" format="enum">
            <enum name="none" value="0"/>
            <enum name="expand_only" value="1"/> <!-- can only expand -->
            <enum name="shrink_only" value="2"/>
            <enum name="both" value="3"/>

        </attr>

        <attr name = "overflow_mode" format="enum">
            <enum name="text" value="0"/>
            <enum name="drawable" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes_LimitedTextView">
        <attr name="limitedTextViewStyle" format="reference"/>
    </declare-styleable>
</resources>